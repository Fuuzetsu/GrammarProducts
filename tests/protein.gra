Grammar: DNA

{-
Need to declare all non-terminals and terminals. F{3} declares three
non-terminals: F_0, F_1, F_2
-}

NT: F{3}
T:  c
-- '-' is a placeholder only

{-
F{i} -> rhs
expands to
F_0 -> rhs (i=0)
F_1 -> rhs (i=1)
F_2 -> rhs (i=2)
-}

F{i} -> stay <<< F{i}   c c c
F{i} -> orf1 <<< F{i+1} c c
F{i} -> orf2 <<< F{i+2} c

//



Grammar: Protein

NT: P
T:  a

P -> amino <<< P a
P -> del   <<< P

//



Product: DNA-Protein

DNA >< Protein

